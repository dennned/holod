{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_subcategory_index' %}

{% block main %}
    <h1>{{ 'title.subcategory_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">{{ 'label.title'|trans }}</th>
            <th scope="col">{{ 'label.category'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for category in subcategories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.category }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_subcategory_edit', {id: category.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                            <span class="hide-mobile">{{ 'action.edit'|trans }}</span>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'post.no_posts_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_subcategory_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_subcategory'|trans }}
        </a>
    </div>
    <div class="section actions">
        <a href="{{ path('admin_post_index') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-arrow-left" aria-hidden="true"></i> {{ 'action.back'|trans }}
        </a>
    </div>

{% endblock %}
